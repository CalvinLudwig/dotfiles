[include]
    path = catppuccin.gitconfig

[user]
	name = Calvin Ludwig
	email = bludwig.calvin@gmail.com

[fetch]
    prune = true

[pull]
	rebase = true

[init]
	defaultBranch = main

[core]
    pager = delta
	editor = nvim

[interactive]
    diffFilter = delta --color-only

[delta]
    features = catppuccin-latte
    navigate = true    # use n and N to move between diff sections
    light = true
    side-by-side = true
    line-numbers = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default



[alias]
    cm = commit
    st = status --short
    lg = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative